<header>
    <nav class="custom-nav">
        <a href="/home/{{userId}}">Home</a>
        <a href="/user/{{userId}}">Dashboard</a>
        <a href="/">Logout</a>
    </nav>
    <h1 id="main-h1">The Tech Blog</h1>
</header>
<main class="main-body">
    <section class="card">
        <div class="card-header">
            <p class="post-title">{{post.title}}</p>
            <p class="post-info">{{post.user.username}} posted on {{post.createdAt}}</p>
        </div>
        <div class="card-body">{{post.text}}</div>
        <div class="card-footer">
        </div>
    </section>
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
    <div class="form-area">
        <h2>
            Add Comment
        </h2>
        <form class="add-comment-form">
            <label for="comment">
            Comment:
            </label>
            <br />
            <textarea id="comment-text" name="comment-text" rows="5" cols="30">
            </textarea>
            <br />
            <button type="submit" value="Submit">
            Submit Comment
            </button>
        </form>
    </div>
</main>
<script src="/js/comment.js"></script>